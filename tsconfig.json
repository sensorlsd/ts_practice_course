{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "removeComments": false,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "usePrecompiledFiles": false
  }

}